@{
  Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container">
    <h1>Address Book</h1>

    @foreach(var add in Model)
    {
      <p><strong>Name:</strong> @add.GetName()</p>
      <p><strong>Street:</strong> @add.GetStreet()</p>
      <p><strong>City:</strong> @add.GetCity()</p>
      <p><strong>Zip Code:</strong> @add.GetZip()</p>
      <p><strong>Phone:</strong> @add.GetPhone()</p>

      <hr>
    }
    <p><a href="/info/new">Add/Save Contact</a></p>
    <form action="/info/delete" method="post">
      <button type="submit" name="button" class="btn btn-primary">Clear All Contacts</button>
    </form>
    </div>
  </body>
  </html>
